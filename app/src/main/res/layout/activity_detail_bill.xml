<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <include layout="@layout/layout_toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="20dp"
                android:gravity="right">

                <ImageView
                    android:id="@+id/detail_bill_icon_like"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_launcher"/>

            </LinearLayout>

            <include
                android:id="@+id/detail_bill_item_id"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_title"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_type"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_sponsor"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_chamber"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_status"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_date"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_url"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_version"
                layout="@layout/layout_detail_item"/>

            <include
                android:id="@+id/detail_bill_item_bill"
                layout="@layout/layout_detail_item"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>